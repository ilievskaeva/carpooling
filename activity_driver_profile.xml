<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/driverRatingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Твојот реjтинг изнесува: "
        android:textColor="@color/orange"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Кој патник сакаш да го оцениш?"
        android:textAlignment="center"
        android:textColor="@color/orange"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/passengerEmailEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Внеси е-маил на патник"
        android:layout_marginTop="15dp"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:inputType="textEmailAddress"/>

    <RatingBar
        android:id="@+id/passengerRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/submitRatingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Поднеси оценка за патникот!"
        android:layout_gravity="center"/>
</LinearLayout>
